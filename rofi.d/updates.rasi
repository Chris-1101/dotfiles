configuration {
  xoffset:       27;
	yoffset:       73;
  location:      1;
  columns:       1;
  lines:         8;
  scroll-method: 1;
  font:          "DejaVuSansMono Nerd Font 11";
}

* {
  background-color: #16161B80;
  border-color:     #2e344f70;
  text-color:       #acbcdae0;
  spacing:          5;
}

mainbox {
  children: [ inputbar, listview, textbox-info ];
}

inputbar {
  border:   0 0 1px 0;
  children: [ prompt, textbox-icon, entry ];
  spacing:  0;
}

prompt {
  font:    "Comfortaa Bold 10";
  padding: 13px 12px 11px 12px;
  border:  0 1px 0 0;
}

textbox-icon {
  background-color: #2e344f70;
  padding:          11px 24px 0 20px;
  color:            #d7d8e0;
  expand:           false;
  str:              "ï®®";
  font:             "DejaVuSansMono Nerd Font 14";
  spacing:          0;
}

entry {
  padding: 13px 12px 11px 12px;
}

listview {
  background-color: transparent;
  cycle:     true;
  margin:    0px 5px;
  scrollbar: false;
  dynamic:   false;
}

textbox-info {
  margin:     0 5px 5px 5px;
  padding:    12px;
  border:     1px;
  expand:     false;
  text-color: #05ADFFB0;
  font:       "DejaVu Sans Italic 8";
  str:        "Entries can be filtered by name or type (pac/aur)";
}

element {
  border:  1px;
  padding: 12px;
}

element selected {
  background-color: #2e344f70;
}
