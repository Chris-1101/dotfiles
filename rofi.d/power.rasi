configuration {
  width:    11;
  lines:    5;
	location: 1;
	yoffset:  72;
	xoffset:  1701;
  font:     "Comfortaa Bold 10";
}

* {
  background-color: #16161B70;
  text-color:       #acbcdae0;
  spacing:          5;
}

inputbar {
  enabled:  false;
  children: [ ];
}

listview {
  padding:   10px;
  scrollbar: false;
}

element {
  background-color: transparent;
  border-color:     transparent;
  border:           1px;
  padding:          10px 12px 14px 12px;
}

element selected {
  background-color: #acbcdae0;
  text-color:       #16161B;
}
